<% content_for :title, "Inferências do SIPEF" %>

<h1>Inferências do SIPEF</h1>

<p style="color: green"><%= notice %></p>

<hr>

<%= form_with(model: @sipef_inference, local: true, multipart: true) do |form| %>
  <% if @sipef_inference.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@sipef_inference.errors.count, "error") %> prohibited this sipef_inference from being saved:</h2>
      <ul>
        <% @sipef_inference.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.file_field :input_file, accept: ".xls,.xlsx" %>
    <%= form.submit "Processar Arquivo" %>
  </div>
<% end %>

<hr>

<table id="sipef_inferences">
  <thead>
    <tr>
      <th>Pagamentos para Inferência</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <%= render @sipef_inferences %>
  </tbody>
</table>
